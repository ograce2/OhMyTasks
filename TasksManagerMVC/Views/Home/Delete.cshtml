@model List<TasksManagerMVC.Models.TaskItem>
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

@if (!Model.Any())
{
    <p>No tasks available to delete.</p>
}
else
{
    <div class="list-group">
        @foreach (var task in Model)
        {
            <form asp-action="ConfirmDelete" method="post" class="mb-2">
                <input type="hidden" name="id" value="@task.Id" />
                <div class="d-flex">
                    <span class="flex-grow-1">@(task.IsCompleted==1 ? "[X]" : "[ ]") @task.Description</span>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        }
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
</div>